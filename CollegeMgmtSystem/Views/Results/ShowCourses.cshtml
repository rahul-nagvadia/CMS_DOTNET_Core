@model Tuple<List<CollegeMgmtSystem.Models.Course>, List<CollegeMgmtSystem.Models.Result>>

<h2>Courses for Student ID: @ViewBag.StudentId</h2>

<form method="post" action="@Url.Action("SaveSessionals", "Results")">
    <table class="table">
        <thead>
            <tr>
                <th>Course ID</th>
                <th>Course Name</th>
                <th>Sessional 1</th>
                <th>Sessional 2</th>
                <th>Sessional 3</th>
                <th>External</th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Math.Max(Model.Item1.Count, Model.Item2.Count); i++)
            {
                <tr>
                    <td>
                        @if (i < Model.Item1.Count)
                        {
                            @Model.Item1[i].Id
                        }
                    </td>
                    <td>
                        @if (i < Model.Item1.Count)
                        {
                            @Model.Item1[i].CourseName
                        }
                    </td>
                    <td>
                        @if (i < Model.Item1.Count)
                        {
                            <input type="text" name="Sessionals[@i].CourseId" value="@Model.Item1[i].Id" hidden />
                        }
                        <input type="text" name="Sessionals[@i].Sessional1" value="@Model.Item2.ElementAtOrDefault(i)?.Sessional1" />
                    </td>
                    <td>
                        <input type="text" name="Sessionals[@i].Sessional2" value="@Model.Item2.ElementAtOrDefault(i)?.Sessional2" />
                    </td>
                    <td>
                        <input type="text" name="Sessionals[@i].Sessional3" value="@Model.Item2.ElementAtOrDefault(i)?.Sessional3" />
                    </td>
                    <td>
                        <input type="text" name="Sessionals[@i].External" value="@Model.Item2.ElementAtOrDefault(i)?.External" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Save Sessionals</button>
</form>